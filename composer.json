{
    "name": "rotexsoft/simple-acl",
    "type": "library",
    "description": "A simple light-weight package that can be used for implementing access control in any php applications.",
    "keywords": [ 
        "acl", "access", "control", "list", "lists", "access-control", "access-control-list", "access-control-lists",
        "permissions", "role", "roles", "rbac", "role-based", "role-based-access-control", "authorize", "authorization"
    ],
    "homepage": "https://github.com/rotexsoft/simple-acl",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Rotimi Adegbamigbe",
            "email": "rotexdegba007-github@yahoo.ca",
            "homepage": "https://github.com/rotexdegba",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2.0",
        "rotexsoft/versatile-collections": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^7.0",
        "php-coveralls/php-coveralls": "^2.0"
    },
    "autoload": {
        "classmap": ["src/"],
        "files": ["src/helper-functions.php"]
    },
    "autoload-dev": {
        "classmap": ["src/", "tests/"],
        "files": [ ]
    }
}
